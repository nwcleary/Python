gpa = float(input("What is your grade?\n"))

if gpa <= 4.0 and gpa >=3.7:
    grade = ("A.") 
    print("You got",grade)
elif gpa <= 3.6 and gpa >=2.7:
    grade = ("B.")
    print("You got",grade)
elif gpa <= 2.6 and gpa >=1.7:
    grade = ("C.")
    print("You got",grade)
elif gpa <= 1.6 and gpa >=1:
    grade = ("D.")
    print("You got",grade)
elif gpa > 4.0:
    print("You're a genius!")
elif gpa < 1:
    print("Sorry to hear that.")
